@{
    
}
<form asp-action="Login" method="post">
    <h4>Login</h4>
    <hr />
    <div class="form-group">
        <label for="name">Name</label>
        <input name="name" id="name" value="@ViewBag.Name" class="form-control" />
        <input type="hidden" name="token" value="@ViewBag.Token"/>
        <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
    </div>
    <div class="form-group">
        <label>Challenge</label>
        <input readonly value="@ViewBag.Challenge" class="form-control" />
        
    </div>
    <div class="form-group">
        <label for="name">Response</label>
        <input id="response" name="response" class="form-control" />
    </div>
    <div class="form-group pt-2">
        <input type="submit" value="Login" class="btn btn-primary" />
    </div>
    @if (ViewBag.Message != null)
    {
        <div class="form-group alert alert-danger mt-3">
            @ViewBag.Message
        </div>
    }
</form>